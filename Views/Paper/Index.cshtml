@model IEnumerable<Section2_IPG521.Models.Papers>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaperId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paperTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaperAuthor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaperId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.paperTitle)
        </td>
        <td>
            @item.PaperAuthor.Substring(0,item.PaperAuthor.LastIndexOf("@"))
        </td>
    </tr>
}

</table>
